extends: default

ignore: |
  .github/
  node_modules/
  dist/
  build/

rules:
  document-start: disable

  line-length: disable

  truthy: disable

  empty-lines:
    max: 1
    max-start: 0
    max-end: 1

  indentation:
    spaces: 2
    indent-sequences: consistent
    check-multi-line-strings: false

  trailing-spaces:
    level: error
    ignore: |
      *.md
  new-line-at-end-of-file: enable
  key-duplicates: enable

  comments:
    min-spaces-from-content: 1

  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  commas:
    max-spaces-before: 0
    min-spaces-after: 1

  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
